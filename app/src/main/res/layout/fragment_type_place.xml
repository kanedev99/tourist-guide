<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="vinova.kane.touristguide.ui.category.ListCategoriesPlaceFragment" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_sight_seeing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/distance_8"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:onClick="@{fragment::initEvent}"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <TextView
                    style="@style/AppTheme.Text.Body18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/distance_4"
                    android:gravity="center"
                    android:padding="@dimen/distance_16"
                    android:text="@string/sight_seeing"
                    android:textAlignment="center"
                    app:drawableStartCompat="@drawable/ic_sight_seeing" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_eat_and_drink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/distance_8"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:onClick="@{fragment::initEvent}"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <TextView
                    style="@style/AppTheme.Text.Body18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/distance_4"
                    android:gravity="center"
                    android:padding="@dimen/distance_16"
                    android:text="@string/eat_and_drink"
                    android:textAlignment="center"
                    app:drawableStartCompat="@drawable/ic_eat_drink" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_night_life"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/distance_8"
                android:layout_marginBottom="16dp"
                android:onClick="@{fragment::initEvent}"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <TextView
                    style="@style/AppTheme.Text.Body18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/distance_4"
                    android:gravity="center"
                    android:padding="@dimen/distance_16"
                    android:text="@string/nightlife"
                    android:textAlignment="center"
                    app:drawableStartCompat="@drawable/ic_nightlife" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_hotel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/distance_8"
                android:layout_marginBottom="16dp"
                android:onClick="@{fragment::initEvent}"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <TextView
                    style="@style/AppTheme.Text.Body18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/distance_4"
                    android:gravity="center"
                    android:padding="@dimen/distance_16"
                    android:text="@string/hotel"
                    android:textAlignment="center"
                    app:drawableStartCompat="@drawable/ic_hotel" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_shopping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/distance_8"
                android:layout_marginBottom="16dp"
                android:onClick="@{fragment::initEvent}"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <TextView
                    style="@style/AppTheme.Text.Body18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/distance_4"
                    android:gravity="center"
                    android:padding="@dimen/distance_16"
                    android:text="@string/shopping"
                    android:textAlignment="center"
                    app:drawableStartCompat="@drawable/ic_shopping" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/distance_8"
                android:layout_marginBottom="16dp"
                android:onClick="@{fragment::initEvent}"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <TextView
                    style="@style/AppTheme.Text.Body18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/distance_4"
                    android:gravity="center"
                    android:padding="@dimen/distance_16"
                    android:text="@string/activity"
                    android:textAlignment="center"
                    app:drawableStartCompat="@drawable/ic_activity" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_airport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/distance_8"
                android:layout_marginBottom="16dp"
                android:onClick="@{fragment::initEvent}"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <TextView
                    style="@style/AppTheme.Text.Body18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/distance_4"
                    android:gravity="center"
                    android:padding="@dimen/distance_16"
                    android:text="@string/airport"
                    android:textAlignment="center"
                    app:drawableStartCompat="@drawable/ic_airport" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_bank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/distance_8"
                android:layout_marginBottom="16dp"
                android:onClick="@{fragment::initEvent}"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <TextView
                    style="@style/AppTheme.Text.Body18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/distance_4"
                    android:gravity="center"
                    android:padding="@dimen/distance_16"
                    android:text="@string/bank"
                    android:textAlignment="center"
                    app:drawableStartCompat="@drawable/ic_bank" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</layout>
